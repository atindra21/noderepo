{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
      },
    "extends":"eslint:recommended",
    "globals": {
        "angular": true,
        "i18n": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}